<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <io.plastique.feed.FeedElementHeaderView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:maxHeight="48dp" />

    <TextView
        android:id="@+id/deviation_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:textAppearance="?textAppearanceHeadline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/deviation_excerpt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:breakStrategy="balanced"
        android:ellipsize="none"
        android:fadingEdgeLength="60dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:requiresFadingEdge="vertical"
        android:textAppearance="?textAppearanceBody1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deviation_title"
        tools:targetApi="m"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/button_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="?selectableItemBackground"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_common_comment_24dp"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:minWidth="72dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deviation_excerpt"
        tools:text="42" />

    <CheckedTextView
        android:id="@+id/button_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_favorite_24dp"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:minWidth="72dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        app:layout_constraintStart_toEndOf="@id/button_comments"
        app:layout_constraintTop_toBottomOf="@id/deviation_excerpt"
        tools:text="42" />

    <ImageView
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_common_share_24dp"
        app:layout_constraintStart_toEndOf="@id/button_favorite"
        app:layout_constraintTop_toBottomOf="@id/deviation_excerpt" />
</androidx.constraintlayout.widget.ConstraintLayout>
