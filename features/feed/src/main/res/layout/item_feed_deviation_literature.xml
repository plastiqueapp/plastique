<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <io.plastique.common.FeedHeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/deviation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="?textAppearanceHeadline6"
        tools:text="@tools:sample/lorem" />

    <io.plastique.core.text.RichTextView
        android:id="@+id/deviation_excerpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:breakStrategy="balanced"
        android:ellipsize="none"
        android:fadingEdgeLength="60dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:requiresFadingEdge="vertical"
        android:textAppearance="?textAppearanceBody1"
        android:textSize="14sp"
        tools:targetApi="m"
        tools:text="@tools:sample/lorem/random" />

    <io.plastique.deviations.DeviationActionsView
        android:id="@+id/deviation_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
