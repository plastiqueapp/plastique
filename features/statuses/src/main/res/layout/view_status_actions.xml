<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/status_actions_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="?selectableItemBackground"
        android:drawableStart="@drawable/ic_common_comment_24dp"
        android:drawablePadding="@dimen/common_button_drawable_padding"
        android:gravity="center_vertical"
        android:minWidth="96dp"
        android:minHeight="40dp"
        android:paddingHorizontal="8dp"
        tools:text="15" />

    <ImageView
        android:id="@+id/status_actions_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="?selectableItemBackground"
        android:contentDescription="@string/common_button_share"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:scaleType="center"
        android:src="@drawable/ic_common_share_24dp" />
</merge>
