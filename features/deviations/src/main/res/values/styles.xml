<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Light.Categories">
        <item name="breadcrumbsStyle">@style/Base.Widget.App.Breadcrumbs</item>
    </style>

    <style name="Theme.App.Dark.Categories">
        <item name="breadcrumbsStyle">@style/Base.Widget.App.Breadcrumbs</item>
    </style>

    <style name="Theme.App.Light.DeviationViewer" parent="Theme.App.Light">
        <item name="android:statusBarColor">@color/deviations_viewer_status_bar</item>
        <item name="android:navigationBarColor">@color/deviations_viewer_navigation_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@color/deviations_viewer_window_background</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="Theme.App.Dark.DeviationViewer" parent="Theme.App.Dark">
        <item name="android:statusBarColor">@color/deviations_viewer_status_bar</item>
        <item name="android:navigationBarColor">@color/deviations_viewer_navigation_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@color/deviations_viewer_window_background</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <style name="Base.Widget.App.Breadcrumbs" parent="">
        <item name="breadcrumbLayoutId">@layout/item_breadcrumb</item>
        <item name="separatorDrawable">@drawable/ic_arrow_right_white_24dp</item>
    </style>

    <style name="Base.Widget.App.Tags" parent="">
        <item name="android:padding">6dp</item>
        <item name="tagMargin">6dp</item>
    </style>

</resources>
