<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="io.plastique.core.ExpandableToolbarLayout">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_pin="true"
        app:tabMode="scrollable" />

    <io.plastique.deviations.tags.TagsView
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        app:tagBackground="@drawable/deviations_browse_tag_background"
        app:tagMargin="6dp"
        app:tagTextAppearance="@style/TextAppearance.App.DeviationTag" />
</merge>
