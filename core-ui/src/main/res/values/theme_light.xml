<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="light_window_background">#f5f5f5</color>

    <style name="Base.Theme.App.Light" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme.App.Light" parent="Base.Theme.App.Light">
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:textColorHint">#6c000000</item>
        <item name="android:windowBackground">@color/light_window_background</item>

        <item name="colorPrimary">#fafafa</item>
        <item name="colorPrimaryDark">#b0b0b0</item>
        <item name="colorAccent">#607d8b</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.Light.BottomSheetDialog</item>
        <item name="preferenceTheme">@style/App.PreferenceThemeOverlay</item>
        <item name="progressBarStyleMedium">@style/Widget.App.ProgressBar.Medium</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>

        <item name="appBarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="dividerColor">#33000000</item>
        <item name="emptyViewStyle">@style/Widget.App.EmptyView</item>
        <item name="imageButtonTint">@color/light_image_button_tint</item>
        <item name="inlineButtonStyle">@style/Widget.App.Button.Inline</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="deviations_literatureBackground">#ffffff</item>
    </style>

    <style name="AppTheme.Light.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetDialogStyle">@style/Base.Widget.App.BottomSheetDialog</item>
        <item name="bottomSheetDialogTitleStyle">@style/Widget.App.Light.BottomSheetDialog.Title</item>
        <item name="bottomSheetDialogListItemStyle">@style/Widget.App.Light.BottomSheetDialog.ListItem</item>
        <item name="bottomSheetDialogDividerStyle">@style/Widget.App.Light.BottomSheetDialog.Divider</item>
    </style>

    <style name="Widget.App.Light.BottomSheetDialog.Title" parent="Base.Widget.App.BottomSheetDialog.Title">
        <item name="android:textColor">#8a000000</item>
    </style>

    <style name="Widget.App.Light.BottomSheetDialog.ListItem" parent="Base.Widget.App.BottomSheetDialog.ListItem">
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="Widget.App.Light.BottomSheetDialog.Divider" parent="Base.Widget.App.BottomSheetDialog.Divider" />

</resources>
