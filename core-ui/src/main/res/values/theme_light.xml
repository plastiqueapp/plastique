        <item name="bottomSheetDialogDividerStyle">@style/Widget.App.Light.BottomSheetDialog.Divider</item>
    </style>

    <style name="Widget.App.Light.BottomSheetDialog.Title" parent="Base.Widget.App.BottomSheetDialog.Title">
        <item name="android:textColor">#8a000000</item>
    </style>

    <style name="Widget.App.Light.BottomSheetDialog.ListItem" parent="Base.Widget.App.BottomSheetDialog.ListItem">
        <item name="android:textColor">#de000000</item>
