    <style name="Theme.App.Dark.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetDialogStyle">@style/Base.Widget.App.BottomSheetDialog</item>
        <item name="bottomSheetDialogTitleStyle">@style/Widget.App.Dark.BottomSheetDialog.Title</item>
        <item name="bottomSheetDialogListItemStyle">@style/Widget.App.Dark.BottomSheetDialog.ListItem</item>
        <item name="bottomSheetDialogDividerStyle">@style/Widget.App.Dark.BottomSheetDialog.Divider</item>
    </style>

    <style name="Widget.App.Dark.BottomSheetDialog.Title" parent="Base.Widget.App.BottomSheetDialog.Title">
        <item name="android:textColor">#8affffff</item>
    </style>

    <style name="Widget.App.Dark.BottomSheetDialog.ListItem" parent="Base.Widget.App.BottomSheetDialog.ListItem">
        <item name="android:textColor">#deffffff</item>
    </style>

    <style name="Widget.App.Dark.BottomSheetDialog.Divider" parent="Base.Widget.App.BottomSheetDialog.Divider" />

